{
  "dashboard": {
    "title": "BookShare Application Metrics",
    "uid": "bookshare-main",
    "timezone": "browser",
    "schemaVersion": 16,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Users",
        "type": "stat",
        "targets": [
          {
            "expr": "bookshare_total_users",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Total Books",
        "type": "stat",
        "targets": [
          {
            "expr": "bookshare_total_books",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Active Users (15min)",
        "type": "stat",
        "targets": [
          {
            "expr": "bookshare_active_users",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Total Reviews",
        "type": "stat",
        "targets": [
          {
            "expr": "bookshare_total_reviews",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bookshare_http_requests_total[5m])",
            "legendFormat": "{{method}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "HTTP Request Duration (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(bookshare_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "Marketplace Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "bookshare_marketplace_books",
            "legendFormat": "Available Books",
            "refId": "A"
          },
          {
            "expr": "bookshare_pending_transactions",
            "legendFormat": "Pending Transactions",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Reviews Today",
        "type": "graph",
        "targets": [
          {
            "expr": "bookshare_reviews_today",
            "legendFormat": "Reviews Created Today",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      }
    ]
  },
  "overwrite": true
}
